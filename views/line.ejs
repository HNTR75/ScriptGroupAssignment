<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head") %>
    <body>
        <%- include("./partials/nav") %>
        <section id="interface">
            <div class="navigation">
                <div class="n1">
                    <div class="search">
                        <i class="fa-solid fa-search"></i>
                        <input type="text" placeholder="Search" />
                    </div>
                </div>
                <div class="profile">
                    <i class="fa-regular fa-bell"></i>
                    <img src="/images/1.jpg" alt="Workflow" />
                </div>
            </div>
            <h3 class="dash-name">
                Dashboard
            </h3>
            <div class="chart-buttons">
                <!-- Add links/buttons to navigate to different chart views -->
                <a href="/bar" class="chart-button">View Bar Chart</a>
                <a href="/pie" class="chart-button">View Pie Chart</a>
                <a href="/line" class="chart-button">View Line Chart</a>
                <a href="/scatter" class="chart-button">View Scatter Chart</a>
              </div>
            <div class="values">
                <div class="val-box">
                    <div>
                        <canvas id="lineChart" width="500" height="300"></canvas>
                    </div>
                </div>
            </div>
        </section>
        <script>
           const expensesData = [
  { label: "Food", value: 250 },
  { label: "Rent", value: 1200 },
  { label: "Transportation", value: 150 },
  { label: "Entertainment", value: 100 },
  { label: "Utilities", value: 80 },
];

const lineChart = new Chart(
  document.getElementById("lineChart").getContext("2d"),
  {
    type: "line",
    data: {
      labels: expensesData.map((entry) => entry.label),
      datasets: [
        {
          label: "Expenses",
          data: expensesData.map((entry) => entry.value),
          borderColor: "blue",
          borderWidth: 2,
          fill: false,
        },
      ],
    },
    options: {
      scales: {
        y: {
          beginAtZero: true,
        },
      },
    },
  }
);

        </script>      
        <script src="/js/data.js"></script>
    </body>
</html>
