<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <div class="grid-container">
      <!-- Header -->
      <%- include("./partials/header") %>
      <!-- End Header -->

      <!-- Sidebar -->
      <%- include("./partials/aside") %>
      <!-- End Sidebar -->

      <!-- Main -->
      <main class="main-container">
        <div class="main-title">
          <h2>Departments</h2>
          <a href="departments/add-departments" class="button">Add Department</a>
          <a href="/departments/export-departments-csv" class="button">Export CSV</a>
        </div>
        <div class="board">
          <table class="table" width="100%">
            <thead>
              <tr>
                <td>Departments ID</td>
                <td>Departments Name</td>
                <td>Action</td>
              </tr>
            </thead>
            <tbody>
              <% rows.forEach(function(row) { %>
                <tr>
                  <td><%= row.departments_id %></td>
                  <td><%= row.departments_name %></td>
                  <td>
                    <a href="/departments/edit-departments/<%= row.departments_id %>" class="edit">Edit</a>
                    <a href="/departments/delete-departments/<%= row.departments_id %>" class="delete">Delete</a>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </main>
      
      <!-- End Main -->
    </div>
    <script src="/js/scripts.js"></script>
  </body>
</html>
