<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <div class="grid-container">

      <!-- Header -->
      <%- include("./partials/header") %>
      <!-- End Header -->

      <!-- Sidebar -->
      <%- include("./partials/aside") %>
      <!-- End Sidebar -->

      <!-- Main -->
      <main class="main-container">
        <div class="main-title">
          <h2>Modules</h2>
          <a href="modules/add-modules" class="button">Add Module</a>
          <a href="/modules/export-modules-csv" class="button">Export CSV</a> <!-- Add this line -->
      </div>
        <div class="board">
            <table width="100%">
                <thead>
                    <tr>
                        <td>Module ID</td>
                        <td>Module Name</td>
                        <td>Lecturer ID</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    <% rows.forEach(function(row) { %>
                        <tr>
                            <td><%= row.modules_id %></td>
                            <td><%= row.modules_name %></td>
                            <td><%= row.lecturers_id %></td>
                            <td>
                                <a href="/modules/edit-modules/<%= row.modules_id %>" class="edit">Edit</a>
                                <a href="/modules/delete-modules/<%= row.modules_id %>" class="delete">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
      </main>
      <!-- End Main -->
    </div>
    <script src="/js/scripts.js"></script>
  </body>
</html>
