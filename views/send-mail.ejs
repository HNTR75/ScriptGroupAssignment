<!-- add-grades.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
</head>
<body>
    <div class="grid-container">
        <!-- Header -->
        <%- include("./partials/header") %>
        <!-- End Header -->

        <!-- Sidebar -->
        <%- include("./partials/aside") %>
        <!-- End Sidebar -->

        <!-- Main -->
        <main class="main-container">
            <div class="main-title">
                <h2>Send Email</h2>
            </div>
            <div class="form-board">
                <!-- Email Sending Form -->
                <div class="form-card">
                    <div class="form-card-inner">
                        <form action="/send-mail" method="post">
                            <!-- Add your email form fields here -->
                            <div class="form-group">
                                <label>Recipient</label>
                                <input type="text" class="form-control" name="recipient" placeholder="Recipient's Email" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Subject:</label>
                                <input type="text" class="form-control" name="subject" placeholder="Email Subject" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Message:</label>
                                <textarea class="form-control" name="message" placeholder="Your Email Message" rows="5"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-info" value="Send Email"/>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Right form-card: Additional Information -->
                <div class="form-card" id="right-form-card">
                    <div class="form-card-inner">
                        <h3>Email Guidelines</h3>
                        <ul>
                            <li>Provide the recipient's email in the "To Email" field.</li>
                            <li>Enter the email subject and message.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="/js/scripts.js"></script>
</body>
</html>
