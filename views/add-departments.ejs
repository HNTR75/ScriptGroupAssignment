<!-- add-departments.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head") %>
</head>
<body>
    <div class="grid-container">
        <!-- Header -->
        <%- include("./partials/header") %>
        <!-- End Header -->
  
        <!-- Sidebar -->
        <%- include("./partials/aside") %>
        <!-- End Sidebar -->
      
        <!-- Main -->
        <main class="main-container">
            <div class="main-title">
                <h2>Add Departments</h2>
            </div>
            <div class="form-board">
                <!-- Left form-card: Department Creation Form -->
                <div class="form-card">
                    <div class="form-card-inner">
                        <form action="/add-departments" method="post">
                            <div class="form-group">
                                <label>Department ID:</label>
                                <input type="text" class="form-control" name="departments_id" value="<%= departments_id %>" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <label>Department Name:</label>
                                <input type="text" class="form-control" name="departments_name" value="<%= departments_name %>" autocomplete="off">
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-info" value="Add"/>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- Right form-card: Additional Information -->
                <div class="form-card" id="right-form-card">
                    <div class="form-card-inner">
                        <h3>Department Guidelines</h3>
                        <ul>
                            <li>Provide a unique Department ID.</li>
                            <li>Enter the name of the department.</li>
                        </ul>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <script src="/js/scripts.js"></script>
</body>
</html>
